<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/report_top_imageBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@drawable/bg_press_normal"
            android:src="@mipmap/back"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/report_top_btn1"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:background="@drawable/bg_ex_button_selected_left"
                android:focusedByDefault="true"
                android:text="支出"
                android:textColor="@color/colorPrimary"/>

            <Button
                android:id="@+id/report_top_btn2"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:background="@drawable/bg_ex_button_normal_middle"
                android:layout_marginLeft="-1dp"
                android:layout_marginStart="-1dp"
                android:text="收入"
                android:textColor="@color/home_lv_bgColor" />

            <Button
                android:id="@+id/report_top_btn3"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:background="@drawable/bg_ex_button_normal_right"
                android:layout_marginLeft="-1dp"
                android:layout_marginStart="-1dp"
                android:text="结余"
                android:textColor="@color/home_lv_bgColor" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>